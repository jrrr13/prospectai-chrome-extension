{
  "manifest_version": 3,
  "name": "ProspectAI â€” SEA Outreach",
  "version": "1.1",
  "description": "Generate culturally-localized outreach messages from LinkedIn profiles across Southeast Asia.",
  "permissions": ["activeTab", "scripting", "clipboardWrite", "sidePanel", "tabs"],
  "host_permissions": ["https://*.linkedin.com/*"],
  "action": {
    "default_icon": { "48": "icon.png" },
    "default_title": "ProspectAI"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/in/*"],
      "js": ["content.js"]
    }
  ]
}
